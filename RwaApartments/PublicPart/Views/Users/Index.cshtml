@model PublicPart.Models.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 mar">
    <fieldset class="p-4">
        <legend>Login</legend>
        @using (Html.BeginForm("Index", "Users", null, FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Email, htmlAttributes: new { @class = "form-control" } )
                @Html.ValidationMessageFor(m => m.Email, "")
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "form-label" })
                @Html.PasswordFor(m => m.Password, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="mb-3 form-check">
                @Html.CheckBoxFor(m => m.RememberMe, htmlAttributes: new { @class = "form-check-input" })
                @Html.LabelFor(m => m.RememberMe, htmlAttributes: new { @class = "form-check-label" })
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            @Html.ValidationSummary(true, "")
        }
    </fieldset>

    
</div>
